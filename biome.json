{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": ["./frontend/.next/**/*", ".frontend/node_modules/**/*"],
		"include": ["./frontend/**/*"]
	},
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noCommaOperator": "off"
			},
			"nursery": {
				"useSortedClasses": "error"
			},
			"suspicious": {
				"noExtraNonNullAssertion": "info",
				"noArrayIndexKey": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "info"
			},
			"a11y": {
				"useAriaPropsForRole": "off",
				"noSvgWithoutTitle": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentStyle": "tab",
		"lineEnding": "lf",
		"formatWithErrors": true,
		"attributePosition": "multiline",
		"indentWidth": 2
	}
}
